A)	
	select distinct
		TG.Bezeichnung as "Generator Bezeichnung",
		AVG(TM.Momentanleistung) as "Durchschnitt Momentanleistung",
		AVG(TM.Windsträke) as "Durchschnitt Windstärke"
	from
		T_Generator TG 
	-- as left join, weil sonst generatoren ohne leistung nicht eingezeigt werden würden
	left join
		T_Messwerte TM on TM.GeneratorNr = TG.GeneratorNr
	group by
		TG.Bezeichnung
	order by
		"Generator Bezeichnung" ASC
		
B)
	select distinct
		TK.Nachname as "Nachname",
		TK.Ort as "Ort Kunde",
		TA.Anlage as "Anlage",
		TA.Ort as "Anlage Ort"
	from
		T_Kunde TK
	-- as left join damit auch kunden ohne anlage angezeigt werden.
	left join
		T_Anlage TA on TA.KundenNr = TK.KundenNr
	ORDER BY
		"Ort Kunde" ASC,
		"Nachname" ASC
		
C)
	select
		TM.Nachname as "Mitarbeiter Nachname",
		COUNT(TS.StörungsNr)
	from
		T_Mitarbeiter TM 
	inner join
		T_Störung TS on TS.MitarbeiterNr = TM.MitarbeiterNr
	group by 
		TM.Nachname
	order by
		"Mitarbeiter Nachname" ASC
		
D)
	select
		TA.Anlage as "Anlage",
		TG.Bezeichnung as "Generator Bezeichnung",
		TG.Inbetribnahme as "Inbetriebname"
	from
		T_Anlage TA
	inner join
		T_Generator TG on TG.GeneratorNr = TA.GeneratorNr
	order by
		"Inbetriebname" DESC